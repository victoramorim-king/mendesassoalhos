<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mendes Assoalhos</title>
    <style>
        *{
            padding: 0;
            margin: 0;
        }
        body {
            padding-bottom: 100px;
        }
        .navbar {
            background-color: #333;
            overflow: hidden;
            position: fixed;
            bottom: 0;
            width: 100%;
            display: flex;
            justify-content: space-between;
        }

        /* Style the links inside the navigation bar */
        .navbar a,
        .navbar button {
            float: left;
            display: block;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        /* Change the color of links on hover */
        .navbar a:hover {
            background-color: #ddd;
            color: black;
        }

        /* Add a color to the active/current link */
        .navbar a.active {
            background-color: #04AA6D;
            color: white;
        }

        .form {
            margin: 50px 0px 20px 0px;
            padding: 0px 15px;
            display: flex;
            flex-direction: column;
        }

        .listItems div {
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
        }

        .observationList  {
            margin-bottom: 50px;
        }

        .observationList div {
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
        }
        .main{
            display: flex;
            flex-direction: column;
            padding: 0px auto;
            margin: 0px auto;
            width: 100%;
            max-width: 460px;
        }

        .btnAdd{
            background-color: #0d6efd;
            color: white;
            border-radius: 18px;
            border: 0;
            margin: 10px 0px 20px 0px;
            width: 150px;
            height: 20px;
            align-self: center;
            font-family: Arial, Helvetica, sans-serif;
        }

        .btnAdd:hover{
            background-color: #054fbe;
        }
        
        .btnAdd:active{
            background-color: #053783;
        }

        .btnDelete{
            background-color: #dc3545;
            color: white;
            border-radius: 18px;
            margin-top: 5px;
            margin-bottom: 20px;
            border: 0;
            width: 150px;
            height: 20px;
            align-self: center;
            font-family: Arial, Helvetica, sans-serif;
        }

        .btnDelete:hover{
            background-color: #dc3545;
        }
        
        .btnDelete:active{
            background-color: #800d19;
        }

        .title{
            align-self: center;
        }

        .obsTextArea{
            width: 100%;
        }
    
        .obsContainer{
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var itemNumber = document.getElementById('itemNumber')
            itemNumber.value = listItems.childElementCount + 1;
        }, false);
    </script>
</head>

<body onclick="blockPDFGeneration(document.querySelector('#listItems').childElementCount)">
    <main class="main">
        <form action='/pdf' id='form1' method='get'>
            <div class="form">
                <h2 class="title">Cabeçalho</h2>
                <label for="Consultor">Consultor</label>
                <input type='text' name="Consultor" required="true"></input>
                <label for="Cidade">Cidade</label>
                <input type='text' name="Cidade" required="true"></input>
                <label for="Cliente">Cliente</label>
                <input type='text' name="Cliente" required="true"></input>
                <label for="Logradouro">Logradouro</label>
                <input type='text' name="Logradouro" required="true"></input>
                <label for="Número">Número</label>
                <input type='text' name="Número" required="true"></input>
                <label for="Bairro">Bairro</label>
                <input type='text' name="Bairro" required="true"></input>
                <label for="Complemento">Complemento</label>
                <input type='text' name="Complemento" required="true"></input>
                <label for="Data">Data</label>
                <input type='date' name="Data" required="true"></input>
            </div>

            <div id="itemForm" class="form">
                <h2 class="title">Itens</h2>
                <label>Numero do Item</label>
                <input type='Number' name="itemNumber" readonly="true" id="itemNumber"></input>
                <label>Quantidade</label>
                <input type='Number' id="quantidade" onchange="calculateTotal()"></input>
                <label>Unidade</label>
                <input type='text'></input>
                <label>Descrição</label>
                <input type='text'></input>
                <label>Valor Unitário</label>
                <input type='text' id="valorUnitario" onchange="calculateTotal()"></input>
                <label>Total</label>
                <input type='text' id="Total"  required="true"  readonly="true"></input>
                <button type="button" class="btnAdd" onclick="addItem(), setItemNumbers()">Adicionar Item</button>
            </div>
            <div id="listItems" class="listItems" name="listItems">
            </div>

            <div class="form">
                <h2 class="title">Observações</h2>
                <input id="novaObservacao" type="text">
                <button id='addObs' class="btnAdd" type="button" onclick="addObservation()">Adicionar Observação</button>
            </div>

            <div id='observationList'class='form'>
            </div>

        </form>

    </main>
        <div class="navbar">
            <a href="#home" class="active">Home</a>
            <a href="#news">News</a>
            <button type='submit' id="submitBtn" disabled="true"  form='form1'>Gerar PDF</button>

        </div>
    <script src="/js/home.js"></script>
</body>

</html>